        <!--app:layout_constraintBottom_toBottomOf="@+id/toolbar_land"-->
        <!--app:layout_constraintStart_toEndOf="@+id/load_land"-->
        <!--app:layout_constraintTop_toTopOf="@+id/toolbar_land" />-->

    <RatingBar
        android:id="@+id/ratingBar_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:numStars="5"
        android:progressBackgroundTint="@color/colorPrimary"
        android:progressTint="@android:color/holo_orange_light"
        android:stepSize="1"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_land"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_land"
        app:layout_constraintTop_toTopOf="@+id/toolbar_land" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        android:text="Fotag B99Chen "
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar_land"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar_land" />

    <ImageButton
        android:id="@+id/clear_land"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintStart_toEndOf="@+id/load_land"
        app:layout_constraintTop_toTopOf="@+id/toolbar_land" />

    <ImageButton
        android:id="@+id/load_land"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_popup_sync"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/toolbar_land" />

</android.support.constraint.ConstraintLayout>
